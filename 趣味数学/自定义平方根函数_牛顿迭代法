#include <stdio.h>
int main()
{
    double x,x0, x1,x2;
    printf("输入x：");
    scanf("%lf", &x);
    x0 = x / 2;
    x1 = (x0 + x / x0) / 2;
    x2 = x1-x0;
    if(x2<0) x2=-x2;
    while (x2 >= 1e-5)            // 1e-5相当于0.00001
    {
        x0 = x1;
        x1 = (x0 + x / x0) / 2;
        x2 = x1-x0;
        if(x2<0) x2=-x2;
    }
    printf("x=%lf,x的平方根是:%lf\n", x, x1);
    return 0;
}
